{
  "manifest_version": 3,
  "name": "Wellness Reminder",
  "version": "1.0",
  "description": "Reminds you to drink water, stay focused, and fix your posture.",
  "permissions": ["storage", "notifications", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
